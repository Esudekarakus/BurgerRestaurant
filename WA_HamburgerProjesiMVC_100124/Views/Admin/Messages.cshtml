@model IEnumerable<WA_HamburgerProjesiMVC_100124.Models.ContactVm>

@{
    ViewData["Title"] = "Messages";
    Layout = "~/Views/Shared/AdminLayout_.cshtml";
}

<h1>Messages</h1>
@*
