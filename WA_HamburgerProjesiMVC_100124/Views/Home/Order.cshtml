@using Domain.Entities
@model List<Menu>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Boş Şablon - GurmeBurger</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link href="/css/site.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="~/js/script.js"></script>
    <style>
        body {
            background-color: #f8f9fa;
            color: #333;
        }

        header {
            background-color: #343a40;
            padding: 10px;
            text-align: center;
            color: #fff;
        }

        main {
            padding: 20px;
        }

        footer {
            background-color: #343a40;
            padding: 10px;
            text-align: center;
            color: #fff;
            position: fixed;
            bottom: 0;
            width: 100%;
        }

        .menu-list {
            list-style: none;
            padding: 0;
            margin: 0;
            display: flex;
        }

            .menu-list li {
                margin-right: 20px; /* Menü öğeleri arasındaki boşluğu belirler */
            }

                .menu-list li:last-child {
                    margin-right: 0; /* Son menü öğesi için boşluk olmasın */
                }

            .menu-list a {
                text-decoration: none;
                color: black; /* Link rengini belirler */
            }

                .menu-list a:hover {
                    text-decoration: underline; /* Mouse hover olduğunda altı çizili olmasını sağlar */
                }
    </style>
   
</head>
<body>

    <header>
        @* <h2>Title</h2> *@
        <nav>
            <ul class="menu-list">
                <li><a href="#" class="text-light" onclick="ListMenus()">Menüler</a></li>
                <li><a href="#" class="text-light" onclick="ListDesserts()">Tatlılar</a></li>
                <li><a href="#" class="text-light" onclick="ListSnacks()">Atıştırmalıklar</a></li>
                <li><a href="#" class="text-light" onclick="ListDrinks()">İçecekler</a></li>
            </ul>
        </nav>

    </header>

    <main class="container-fluid" id="mainContainer">
        <div class="card-group">
        @foreach(Menu menu in Model)
        {
                <div class="card" data-search="@menu.Name.ToLower()">
                    <div class="image-container">
                        <img src="@menu.ImagePath" class="card-img-top vw-25" style="width:auto !important" ; alt="...">
                        
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">@menu.Name</h5>
                        <p class="card-text">@menu.Description</p>
      
                        <div class="overlay">
                            <a class="btn btn-dark" asp-action="AddMenuToCard" asp-route-id="@menu.Id">Sepete Ekle</a>
                        </div>
                        
                    </div>
                </div>
         
        }
        </div>

        
        
    </main>
    <div id="error"></div>


   
</body>
