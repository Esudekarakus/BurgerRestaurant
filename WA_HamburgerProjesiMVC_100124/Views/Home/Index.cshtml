@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GurmeBurger</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f8f9fa;
            color: #333;
        }

        header {
            background-color: #343a40;
            padding: 10px;
            text-align: center;
            color: #fff;
        }

        main {
            padding: 20px;
        }

        img {
            max-width: 100%;
            height: auto;
            border-radius: 10px;
            margin-top: 20px;
        }

        .special-offers {
            background-color: #f4f4f4;
            padding: 20px;
            border-radius: 10px;
            margin-top: 20px;
        }

       
    </style>
</head>
<body>

    <header>
        <h1>GurmeBurger</h1>
    </header>

    <main class="container">
        <section>
            <h2 class="text-center">Hoş Geldiniz!</h2>
            <p class="text-center">GurmeBurger, lezzetli burgerleriyle sizi ağırlamaktan mutluluk duyar.</p>
            <img src="~/img/okuz-burger-slider-yeni-4-min.jpg" alt="GurmeBurger"  width=""/>
        </section>

        <section class="special-offers">
            <h2 class="text-center">Özel Teklifler</h2>
            <p class="text-center">Bu ay için özel indirimlerimizi kaçırmayın!</p>
            <p class="text-center">Şimdi sipariş verin ve lezzetin tadını çıkarın.</p>
            <p class="text-center"><a class="btn btn-outline-danger" asp-action="Order">Sipariş ver</a></p>
        </section>
    </main>


    

</body>
</html>