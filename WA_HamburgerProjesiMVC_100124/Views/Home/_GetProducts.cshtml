
@using Domain.Entities
@model List<Product>

<main class="container-fluid" id="mainContainer">
    <div class="card-group">
        @foreach (Product product in Model)
        {
            <div class="card">
                <div class="image-container">
                    @* <img src="img/desserts/donut.png" class="card-img-top vw-25" style="width:auto !important" ; alt="..."> *@

                </div>
                <div class="card-body">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text">@product.Price</p>
                    <br />
                    <div class="overlay">
                        <a class="btn btn-dark" asp-action="AddProductToCard" asp-route-id="@product.Id">Sepete Ekle</a>
                    </div>

                </div>
            </div>

        }
    </div>

</main>